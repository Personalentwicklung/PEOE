  <script>
    // --- State ---
    const state = {
      rolle: { selected: [], limit: 3, edited:false },
      purpose: { selected: [], limit: 2, edited:false },
      tasks: { selected: [], limit: 3, edited:false },

      start: { selected: '', edited:false },
      tiefe: { selected: '', edited:false },
      rq: { selected: '', edited:false },
      variation: { selected: '', edited:false },
      recherche: { selected: '', edited:false },

      stil: { selected: '', edited:false }
    };

    // --- Helpers ---
    const qs = (sel, root=document) => root.querySelector(sel);
    const qsa = (sel, root=document) => Array.from(root.querySelectorAll(sel));
    const joinList = (arr) => arr.join(', ');

    function enforceMultiLimit(selectEl, key){
      const { limit } = state[key];
      // Ermittle neu gewählte Werte
      const selectedOptions = Array.from(selectEl.options).filter(o => o.selected).map(o => o.text);

      // Falls Limit überschritten → letzte Änderung rückgängig
      if(selectedOptions.length > limit){
        // Ermitteln: welche Option wurde zuletzt hinzugefügt?
        // Heuristik: der, der neu in selectedOptions ist und noch nicht in state[key].selected
        const newlyAdded = selectedOptions.find(x => !state[key].selected.includes(x));
        // Deselect it
        for(const opt of selectEl.options){
          if(opt.text === newlyAdded){ opt.selected = false; break; }
        }
      }

      // finaler Stand nach Korrektur
      const finalSelected = Array.from(selectEl.options).filter(o => o.selected).map(o => o.text);

      // Reihenfolge: Bestehende Reihenfolge beibehalten, neue am Ende anfügen
      const prev = state[key].selected.slice();
      const kept = prev.filter(x => finalSelected.includes(x));
      const added = finalSelected.filter(x => !prev.includes(x));
      state[key].selected = kept.concat(added);

      // UI: Counter + Hint
      const countEl = qs(`#${key}Count`);
      const hintEl = qs(`#${key}Hint`);
      if(countEl) countEl.textContent = `${state[key].selected.length} / ${limit}`;
      if(hintEl){
        const atMax = state[key].selected.length >= limit;
        hintEl.hidden = !atMax;
        // Optional: disable übrige Optionen (nur visuell; Auswahl bereits limitiert)
        Array.from(selectEl.options).forEach(o => {
          if(!o.selected) o.disabled = atMax;
        });
      }

      // Vorschau aktualisieren (falls nicht manuell editiert)
      updateEditableFromSelection(key);
    }

    function updateEditableFromSelection(key){
      if(state[key].edited) return; // User hat manuell angepasst → nicht überschreiben
      const map = {
        rolle: { span: '#funktionEditable', value: joinList(state.rolle.selected) || '{{ funktion }}' },
        purpose: { span: '#purposeEditable', value: joinList(state.purpose.selected) || '{{ purpose }}' },
        tasks: { span: '#tasksEditable', value: joinList(state.tasks.selected) || '{{ tasks }}' }
      };
      const target = map[key];
      if(target){
        const el = qs(target.span);
        if(el) el.textContent = target.value;
      }
    }

    function updateSingleSelect(selectEl, key){
      const val = selectEl.value || '';
      state[key].selected = val;
      if(state[key].edited) return;
      const spanId = ({
        start:'#startEditable',
        tiefe:'#tiefeEditable',
        rq:'#rqEditable',
        variation:'#varEditable',
        recherche:'#recEditable',
        stil:'#stilEditable'
      })[key];
      if(spanId){
        const el = qs(spanId);
        el.textContent = val || `{{ ${key} }}`;
      }
    }

    function resetModule(key){
      switch(key){
        case 'rolle':{
          const select = qs('#rolleSelect');
          Array.from(select.options).forEach(o => {o.selected=false; o.disabled=false;});
          state.rolle.selected = [];
          state.rolle.edited = false;
          qs('#rolleCount').textContent = `0 / ${state.rolle.limit}`;
          qs('#rolleHint').hidden = true;
          qs('#funktionEditable').textContent = '{{ funktion }}';
          break;
        }
        case 'purpose':{
          const select = qs('#purposeSelect');
          Array.from(select.options).forEach(o => {o.selected=false; o.disabled=false;});
          state.purpose.selected = [];
          state.purpose.edited = false;
          qs('#purposeCount').textContent = `0 / ${state.purpose.limit}`;
          qs('#purposeHint').hidden = true;
          qs('#purposeEditable').textContent = '{{ purpose }}';
          break;
        }
        case 'tasks':{
          const select = qs('#tasksSelect');
          Array.from(select.options).forEach(o => {o.selected=false; o.disabled=false;});
          state.tasks.selected = [];
          state.tasks.edited = false;
          qs('#tasksCount').textContent = `0 / ${state.tasks.limit}`;
          qs('#tasksHint').hidden = true;
          qs('#tasksEditable').textContent = '{{ tasks }}';
          break;
        }
        case 'start':{
          qs('#startSelect').selectedIndex = -1;
          state.start.selected = '';
          state.start.edited = false;
          qs('#startEditable').textContent = '{{ startverhalten }}';
          break;
        }
        case 'tiefe':{
          qs('#tiefeSelect').selectedIndex = -1;
          state.tiefe.selected = '';
          state.tiefe.edited = false;
          qs('#tiefeEditable').textContent = '{{ antworttiefe }}';
          break;
        }
        case 'rq':{
          qs('#rqSelect').selectedIndex = -1;
          state.rq.selected = '';
          state.rq.edited = false;
          qs('#rqEditable').textContent = '{{ rueckfragen }}';
          break;
        }
        case 'variation':{
          qs('#varSelect').selectedIndex = -1;
          state.variation.selected = '';
          state.variation.edited = false;
          qs('#varEditable').textContent = '{{ variation }}';
          break;
        }
        case 'recherche':{
          qs('#recSelect').selectedIndex = -1;
          state.recherche.selected = '';
          state.recherche.edited = false;
          qs('#recEditable').textContent = '{{ recherche }}';
          break;
        }
        case 'stil':{
          qs('#stilSelect').selectedIndex = -1;
          state.stil.selected = '';
          state.stil.edited = false;
          qs('#stilEditable').textContent = '{{ stil }}';
          break;
        }
      }
    }

    function getEditableText(selector, fallback){
      const el = qs(selector);
      const t = (el?.textContent || '').trim();
      return t || fallback;
    }

    // Gesamtskript generieren
    function buildScript(){
      // 1) Rolle/Persona
      const rolle = getEditableText('#funktionEditable', '{{ funktion }}');
      const rolleBlock = `Dein Wirkungsbereich ist ${rolle}. Du agierst als professioneller, menschlicher Begleiter für diesen Kontext.`;

      // 2) Purpose
      const purpose = getEditableText('#purposeEditable', '{{ purpose }}');
      const purposeBlock = `Dein übergeordneter Zweck ist es, ${purpose}. Du orientierst deine gesamte Arbeitsweise an diesem Ziel.`;

      // 3) Tasks
      const tasks = getEditableText('#tasksEditable', '{{ tasks }}');
      const tasksBlock = `Dein Auftrag umfasst folgende Tätigkeiten: ${tasks}. Du führst diese Aufgaben verlässlich, klar strukturiert und nutzerorientiert aus.`;

      // 4) Grundverhalten – Zusammenfassung
      const start = getEditableText('#startEditable', '{{ startverhalten }}');
      const tiefe = getEditableText('#tiefeEditable', '{{ antworttiefe }}');
      const rq = getEditableText('#rqEditable', '{{ rueckfragen }}');
      const vari = getEditableText('#varEditable', '{{ variation }}');
      const rec = getEditableText('#recEditable', '{{ recherche }}');

      const grundSum = `Du arbeitest nach folgender festen Logik:
– Du startest Antworten mit: ${start}.
– Deine Antworttiefe ist: ${tiefe}.
– Deine Rückfragenlogik lautet: ${rq}.
– Dein Ausdruck folgt der Variation: ${vari}.
– Dein Recherche- und Quellenverhalten ist: ${rec}.`;

      // 5) Kommunikationsstil
      const stil = getEditableText('#stilEditable', '{{ stil }}');
      const stilBlock = `Dein Kommunikationsstil ist: ${stil}. Du hältst diesen Stil in Tonfall, Struktur und Wortwahl konsistent ein.`;

      // 6) FEST VERANKERT – fix angehängt
      const fixBlocks = [
`[Formatoption (situativ nachgelagert)]
Biete nach der ersten Antwort optional an, das Ergebnis in einem gewünschten Format darzustellen (z. B. Schritte, Varianten, Pro/Contra, Formulierungen). Frag nur bei erkennbarem Strukturbedarf; sonst entscheide situativ.`,

`[Compliance DSGVO]
Du hältst dich jederzeit an Datenschutz, Vertraulichkeit, Sicherheit und professionelle Grenzen. Nie Diagnosen erfragen; nur arbeitsrelevante Einschränkungen klären.`,

`[Grenzen]
Keine Diagnosen oder medizinischen Aussagen; keine psychologischen Interpretationen; keine Rechtsberatung. Keine Beratung zu Kindern, Familie oder privaten Ursachen.
Bei privaten Belastungen: freundlich bleiben, Rolle klären, beruflichen Rahmen sortieren (Prioritäten, Ruhe, Arbeitsfähigkeit).
Bei gesundheitlichen Belastungen, auffälligen Fehlzeiten, eskalierten Konflikten oder Themen außerhalb deiner Rolle: Hinweise geben, dass HR/BGM/Betriebsrat eingebunden werden sollte. Immer sachlich, respektvoll, neutral, ohne persönliche Abwertungen.`,

`[Out-of-Scope]
Du kommunizierst klar, wenn eine Anfrage außerhalb deines Zuständigkeitsbereiches liegt, und bietest dann sichere, fachlich passende Alternativen an.`,

`[Universelle Fehler- & Klarheitslogik]
Wenn Informationen fehlen, unklar oder widersprüchlich sind, frage einmal präzise nach, triff keine Annahmen und arbeite nicht mit Vermutungen. Bleibe faktentreu, biete bei Bedarf Optionen an und mach transparent, wenn du ohne Klärung nicht sinnvoll weitermachen kannst.`,

`[Konsistenz- & Lückenmanagement]
Prüfe Nutzerangaben auf Konsistenz, vermeide Endlos-Schleifen (max. eine Nachfrage) und halte Grenzen klar fest: Sag offen, wenn dir verlässliche Infos fehlen oder der Auftrag außerhalb deines Handlungsspielraums liegt.`,

`[Kommunikatives Eskalationsmodell]
Arbeite in vier Schritten:
(1) kurze offene Klärung,
(2) Konkretisierung mit Fokus,
(3) Konsequenz nach zwei unklaren Antworten („Ich kann ohne Klärung nicht weiterhelfen.“),
(4) Hinweis, dass das Thema ggf. einer formalen Prüfung durch zuständige Stellen bedarf.`,

`[Transparenzpflicht]
Sag früh und klar, welche Information du brauchst, um eine qualifizierte Antwort zu geben.`,

`[Werte & Unternehmensbezug]
Werte: Sicherheit, Qualität, respektvolles Verhalten, Herausforderung, Gewinnen. Werte nur nennen, wenn sie Orientierung geben („…damit wir Qualität/Sicherheit sichern.“). Trade-offs benennen; Sicherheit und Respekt priorisieren. Orientierung: mutig, klar, lösungsorientiert, ohne Drama.`
      ];

      // Zusammensetzen
      const parts = [
        rolleBlock,
        purposeBlock,
        tasksBlock,
        grundSum,
        stilBlock,
        // fix blocks
        ...fixBlocks
      ];

      return parts.join('\n\n').trim();
    }

    async function copyToClipboard(text){
      try{
        if(navigator.clipboard && window.isSecureContext){
          await navigator.clipboard.writeText(text);
        } else {
          // Fallback
          const ta = document.createElement('textarea');
          ta.value = text;
          ta.style.position='fixed';
          ta.style.left='-9999px';
          document.body.appendChild(ta);
          ta.focus();
          ta.select();
          document.execCommand('copy');
          document.body.removeChild(ta);
        }
        return true;
      }catch(e){
        console.error(e);
        return false;
      }
    }

    // --- Wiring ---
    window.addEventListener('DOMContentLoaded', () => {
      // Umschalten Start -> Builder
      qs('#startBtn').addEventListener('click', () => {
        qs('#start').style.display = 'none';
        qs('#builder').style.display = 'block';
        // Fokus auf erstes Modul
        qs('#rolleSelect').focus();
      });

      // Multi-Selects
      qs('#rolleSelect').addEventListener('change', e => enforceMultiLimit(e.target, 'rolle'));
      qs('#purposeSelect').addEventListener('change', e => enforceMultiLimit(e.target, 'purpose'));
      qs('#tasksSelect').addEventListener('change', e => enforceMultiLimit(e.target, 'tasks'));

      // Singles
      qs('#startSelect').addEventListener('change', e => updateSingleSelect(e.target, 'start'));
      qs('#tiefeSelect').addEventListener('change', e => updateSingleSelect(e.target, 'tiefe'));
      qs('#rqSelect').addEventListener('change', e => updateSingleSelect(e.target, 'rq'));
      qs('#varSelect').addEventListener('change', e => updateSingleSelect(e.target, 'variation'));
      qs('#recSelect').addEventListener('change', e => updateSingleSelect(e.target, 'recherche'));
      qs('#stilSelect').addEventListener('change', e => updateSingleSelect(e.target, 'stil'));

      // Editable flags
      qs('#funktionEditable').addEventListener('input', () => state.rolle.edited = true);
      qs('#purposeEditable').addEventListener('input', () => state.purpose.edited = true);
      qs('#tasksEditable').addEventListener('input', () => state.tasks.edited = true);
      qs('#startEditable').addEventListener('input', () => state.start.edited = true);
      qs('#tiefeEditable').addEventListener('input', () => state.tiefe.edited = true);
      qs('#rqEditable').addEventListener('input', () => state.rq.edited = true);
      qs('#varEditable').addEventListener('input', () => state.variation.edited = true);
      qs('#recEditable').addEventListener('input', () => state.recherche.edited = true);
      qs('#stilEditable').addEventListener('input', () => state.stil.edited = true);

      // Resets
      qs('#rolleReset').addEventListener('click', () => resetModule('rolle'));
      qs('#purposeReset').addEventListener('click', () => resetModule('purpose'));
      qs('#tasksReset').addEventListener('click', () => resetModule('tasks'));
      qs('#startReset').addEventListener('click', () => resetModule('start'));
      qs('#tiefeReset').addEventListener('click', () => resetModule('tiefe'));
      qs('#rqReset').addEventListener('click', () => resetModule('rq'));
      qs('#varReset').addEventListener('click', () => resetModule('variation'));
      qs('#recReset').addEventListener('click', () => resetModule('recherche'));
      qs('#stilReset').addEventListener('click', () => resetModule('stil'));

      // Copy
      qs('#copyBtn').addEventListener('click', async () => {
        const script = buildScript();
        const ok = await copyToClipboard(script);
        const msg = qs('#copyMsg');
        msg.style.display = ok ? 'block' : 'none';
        if(!ok) alert('Kopieren nicht möglich. Bitte manuell kopieren.');
        // optional: nach 4s wieder ausblenden
        if(ok) setTimeout(()=> msg.style.display='none', 4000);
      });
    });
  </script>
</body>
</html>
``
